{
  "name": "workspace",
  "$schema": "node_modules/nx/schemas/project-schema.json",

  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'NOOP'"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'NOOP'"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'NOOP'"
      }
    },

    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "syncVersions": true,
        "allowEmptyRelease": true,
        "trackDeps": true,
        "push": true,
        "remote": "gitlab"
      },
      "configurations": {
        "main-branch": {
          "baseBranch": "HEAD:main"
        },
        "next-branch": {
          "baseBranch": "HEAD:next"
        }
      }
    },

    "deploy-gitlab": {
      "executor": "@jscutlery/semver:gitlab",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    }
  },

  "tags": []
}