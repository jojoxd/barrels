{
  "name": "barrels-nx",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/barrels-nx/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/barrels-nx",
        "main": "packages/barrels-nx/src/index.ts",
        "tsConfig": "packages/barrels-nx/tsconfig.lib.json",
        "assets": [
          "packages/barrels-nx/*.md",
          {
            "input": "./packages/barrels-nx/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/barrels-nx/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/barrels-nx",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/barrels-nx",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/barrels-nx/**/*.ts",
          "packages/barrels-nx/package.json",
          "packages/barrels-nx/generators.json",
          "packages/barrels-nx/executors.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/barrels-nx/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "buildTarget": "barrels-nx:build",
        "github": false,
        "changelog": true,
        "npm": true,
        "tagFormat": "barrels-nx-v${VERSION}"
      }
    }
  },
  "tags": []
}
