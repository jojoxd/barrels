{
  "name": "barrels",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/barrels/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/barrels",
        "tsConfig": "packages/barrels/tsconfig.lib.json",
        "packageJson": "packages/barrels/package.json",
        "main": "packages/barrels/src/index.ts",
        "assets": [
          "packages/barrels/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/barrels/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/barrels/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "buildTarget": "barrels:build"
      }
    }
  },
  "tags": []
}
